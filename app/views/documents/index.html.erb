<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Genre</th>
      <th>Deliverable</th>
      <th>Classification</th>
      <th>Deadline</th>
      <th>Format</th>
      <th>Grade</th>
      <th>File text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.genre %></td>
        <td><%= document.deliverable %></td>
        <td><%= document.classification %></td>
        <td><%= document.deadline %></td>
        <td><%= document.format %></td>
        <td><%= document.grade %></td>
        <td><%= document.file_text %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
